@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    Bây giờ là: <span id="dongho" class="text-danger"></span>
</div>

@section Scripts{
<script>
    function layGioServer() {
        $.ajax({
            url: '/Ajax/ServerTime',
            type: 'GET',
            success: function (response) {
                $("#dongho").html(response);
            }
        });
    }
    $(function() {
        layGioServer();
        setInterval(layGioServer, 1000);
    });
</script>
}